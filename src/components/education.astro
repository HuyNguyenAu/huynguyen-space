---
import Section from "./section.astro";

type Education = {
  name: string;
  institution: string;
  startDate: string;
  endDate?: string;
};

export type Props = {
  education: Array<Education>;
};

const { education } = Astro.props;
---

<Section title="Education">
  {
    education.map((education: Education) => (
      <div class="text-gray-900 font-light leading-relaxed">
        <div class="mb-8 sm:divide-y-2">
          <div class="py-8 flex flex-nowrap justify-center md:justify-start">
            <div class="md:w-64 flex-shrink-0 flex flex-col justify-center">
              <span class="font-medium mb-1 text-xl">
                {education.institution}
              </span>
              <span class="text-gray-500 mb-1 text-sm">
                {education.startDate} - {education.endDate ?? "Present"}
              </span>
            </div>
            <div class="ml-5 flex flex-wrap content-center">
              <h2 class="text-2xl font-medium h-fit text-right">
                {education.name}
              </h2>
            </div>
          </div>
        </div>
      </div>
    ))
  }
</Section>
