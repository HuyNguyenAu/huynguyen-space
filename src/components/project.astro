---
import Section from "./section.astro";

type Project = {
  name: string;
  startDate: string;
  endDate?: string;
  description: string;
  link: string;
};

export type Props = {
  projects: Array<Project>;
};

const { projects } = Astro.props;
---

<Section title="Projects">
  <div class="flex flex-wrap md:flex-nowrap text-gray-900 font-light leading-relaxed gap-3">
    {
      projects.map((project: Project) => (
        <div class="xl:w-1/3 md:w-1/2">
          <div class="border border-gray-200 p-6 rounded-lg h-full flex flex-col justify-between">
            <div>
              <div class="mb-4 w-10 h-10 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500">
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-6 h-6"
                  viewBox="0 0 24 24"
                >
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2" />
                </svg>
              </div>
              <h2 class=" mb-1 text-lg font-medium">{project.name}</h2>
              <p class="mb-2 text-sm text-gray-500">
                {project.startDate} - {project.endDate ?? "Present"}
              </p>
              <p class="mb-3">{project.description}</p>
            </div>
            <a
              class="text-indigo-500 flex items-center cursor-pointer"
              href={project.link}
              target="_blank"
            >
              Learn More
              <svg
                class="w-4 h-4 ml-2"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M5 12h14" />
                <path d="M12 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</Section>
