---
import Section from "./section.astro";

type Project = {
  name: string;
  startDate: string;
  endDate?: string;
  description: string;
  link: string;
};

export type Props = {
  projects: Array<Project>;
};

const { projects } = Astro.props;
---

<Section title="Projects">
  <div
    class="flex flex-wrap md:flex-nowrap text-gray-900 font-light leading-relaxed gap-3"
  >
    {
      projects.map((project: Project) => (
        <div class="xl:w-1/3 md:w-1/2">
          <div class="border border-gray-200 p-6 rounded-lg h-full flex flex-col justify-between">
            <div>
              <div class="mb-4 w-10 h-10 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500">
                <svg
                fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-6 h-6"
                  viewBox="0 0 24 24"
                >
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                </svg>
              </div>
              <h2 class=" mb-1 text-lg font-medium">{project.name}</h2>
              <p class="mb-2 text-sm text-gray-500">
                {project.startDate} - {project.endDate ?? "Present"}
              </p>
              <p class="mb-3">{project.description}</p>
            </div>
            <a
              class="text-indigo-500 flex items-center cursor-pointer"
              href={project.link}
              target="_blank"
            >
              Learn More
              <svg
                class="w-4 h-4 ml-2"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M5 12h14" />
                <path d="M12 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</Section>
