---
import Section from "./section.astro";

type SkillStack = {
  title: string;
  skills: Array<string>;
};

export type Props = {
  skills: Array<SkillStack>;
};

const { skills } = Astro.props;
---

<Section title="Skills">
  <div class="flex flex-wrap flex-col gap-10 justify-between md:flex-row items-center md:items-stretch text-gray-900 font-light leading-relaxed">
    {
      skills.map((skillStack: SkillStack) => (
        <div class="w-1/3 md:w-fit flex justify-center">
          <nav class="w-full h-full md:w-fit flex flex-col items-center text-center sm:text-left">
            <h2 class="font-medium tracking-widest text-gray-900 mb-4 text-sm text-center w-full">
              {skillStack.title}
            </h2>
            <div class="flex flex-col items-baseline text-left w-fit md:w-full">
              {skillStack.skills.map((skill: string) => (
                <a>
                  <span class="bg-indigo-100 text-indigo-500 w-4 h-4 mr-2 rounded-full inline-flex items-center justify-center">
                    <svg
                      fill="none"
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      class="w-3 h-3"
                      viewBox="0 0 24 24"
                    >
                      <path d="M20 6L9 17l-5-5" />
                    </svg>
                  </span>
                  {skill}
                </a>
              ))}
            </div>
          </nav>
        </div>
      ))
    }
  </div>
</Section>
